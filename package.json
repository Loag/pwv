{
  "name": "pwv-backend",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "unit_test": "nyc mocha --grep '#unit' --require ts-node/register **/*-test.ts",
    "integration_test": "nyc mocha --grep '#integration' --require ts-node/register **/*-test.ts --exit",
    "dev": "nodemon ./src/server.ts",
    "build": "tsc --project ./",
    "build-local": "npm run build && cp -r node_modules/.prisma dist/node_modules",
    "test-run": "node ./dist/server.js",
    "postbuild": "cp package.json dist/package.json && cp package-lock.json dist/package-lock.json && cd dist && npm ci --only=production && cd .. && cp -r prisma dist",
    "docker-build": "docker build -t pwv-backend .",
    "docker-buildx86": "docker buildx build --platform linux/amd64 -t pwv-backendx86 . --load",
    "docker-tag-x86": "docker tag pwv-backendx86 registry.digitalocean.com/resident-vision-cont-repo/pwv-backend",
    "docker-run": "docker run -d -p 3000:3000 pwv-backend",
    "docker-push": "docker push registry.digitalocean.com/resident-vision-cont-repo/pwv-backend",
    "deploy": "kubectl apply -f deployment.yml",
    "deploy-ingress": "kubectl apply -f service_ingress.yml",
    "prod-build": "npm run docker-buildx86 && npm run docker-tag-x86 && npm run docker-push"
  },
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.58",
    "@mailchimp/mailchimp_transactional": "^1.0.32",
    "@prisma/client": "^2.26.0",
    "aws-sdk": "^2.977.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jwks-rsa": "^2.0.3",
    "pino": "^6.11.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/mailchimp__mailchimp_marketing": "^3.0.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/pino": "^6.3.7",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prisma": "^2.26.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
